<div class="mini-splitter" vertical="true" style="width:100%;height:100%;" borderStyle="border:0;">
    <div size="25%" showCollapseButton="true">
        <div id="tbDatabase" class="mini-toolbar" 
             borderStyle="border-top:0;border-left:0;border-right:0;">
            <a class="mini-button" plain="true" id="new" iconCls="fa-file-o">新建</a>
            <a class="mini-button" plain="true" id="query" iconCls="fa-search">查询</a>
        </div>
        <div id="queryDatabase" class="mini-fit">
            @Form.TextArea("querySql", true, new {
               style = "width:100%;height:100%;",
               borderStyle = "border:0;"
            })
        </div>
    </div>
    <div showCollapseButton="true">
        <div id="gridDatabase" class="mini-datagrid"
             style="width:100%;height:100%;" borderStyle="border:0;"
             url="/api/plt/DevTool/QueryDatas" idField="Id" multiSelect="true">
        </div>
    </div>
</div>